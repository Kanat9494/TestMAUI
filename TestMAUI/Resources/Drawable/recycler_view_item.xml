                android:text="Price: $100"
                android:textSize="18sp"
				android:textStyle="bold"/>

			<TextView
                android:id="@+id/productPublishedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
				android:textStyle="bold"/>

